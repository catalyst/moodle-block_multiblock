{{!
    @template block_multiblock/columns-2-66-33

    This template shows the multiple blocks in a two-column layout (with a 2:1 or 66%/33% ratio)

    Example context (json):
    {
        "multiblockid": 28,
        "multiblock": [
            {
                "id": 1,
                "title": "Block 1",
                "content": "<p>Block 1</p>",
                "footer": "My footer",
                "active": true
            },
            {
                "id": 2,
                "title": "Block 2",
                "content": "<p>Block 2</p>",
                "footer": "",
                "active": false
            }
        ]
    }
}}
<div class="multiblock multiblock-columns-2 multiblock-columns-2-66-33">
    <div class="container">
        <div class="row">
            {{#multiblock}}
            <div class="{{#is_odd}}col-md-8{{/is_odd}}{{^is_odd}}col-md-4{{/is_odd}}">
                <section id="inst{{id}}" class="block block_{{type}} card mb-3 h-100">
                    <div class="card-body p-3">
                        {{#title}}
                            <h5 id="instance-{{id}}-header" class="card-title d-inline">{{{title}}}</h5>
                        {{/title}}
                        <div class="card-text content{{#title}} mt-3{{/title}}">
                            {{{content}}}
                            <div class="footer">{{{footer}}}</div>
                            {{{annotation}}}
                        </div>
                    </div>
                </section>
            </div>
            {{/multiblock}}
        </div>
    </div>
</div>
{{#js}}
require(['jquery'], function($) {
    $('#inst{{multiblockid}}').addClass('multiblock-columns-2-parent');
});
{{/js}}
