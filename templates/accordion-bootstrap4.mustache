{{!
    @template block_multiblock/accordion-bootstrap4

    This template shows the multiple blocks in an accordion

    Example context (json):
    {
        "multiblockid": 28,
        "multiblock": [
            {
                "id": 1,
                "title": "Block 1",
                "content": "<p>Block 1</p>",
                "footer": "My footer",
                "active": true
            },
            {
                "id": 2,
                "title": "Block 2",
                "content": "<p>Block 2</p>",
                "footer": "",
                "active": false
            }
        ]
    }
}}
<div class="multiblock multiblock-accordion" id="multiblock-{{multiblockid}}">
    {{#multiblock}}
    <div class="card" role="region">
        <div class="card-header" id="multiblock-container-{{multiblockid}}-{{id}}">
            <h5 class="mb-0">
                <a class="btn btn-link{{^active}} collapsed{{/active}}" data-toggle="collapse" href="#multiblock-content-{{multiblockid}}-{{id}}" role="button" aria-controls="multiblock-content-{{multiblockid}}-{{id}}">{{{title}}}</a>
            </h5>
        </div>
        <div id="multiblock-content-{{multiblockid}}-{{id}}" class="collapse{{#active}} show{{/active}}" aria-labelledby="multiblock-container-{{multiblockid}}-{{id}}" data-parent="#multiblock-{{multiblockid}}">
            <div class="card-body {{class}}">
                {{{content}}}
                <div class="footer">{{{footer}}}</div>
                {{{annotation}}}
            </div>
        </div>
    </div>
    {{/multiblock}}
</div>
